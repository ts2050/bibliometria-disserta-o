year = {2018},
title = {Project portfolio selection and planning with fuzzy constraints},
copyright = {2017 Elsevier Inc.},
language = {eng},
address = {New York},
author = {Pérez, Fátima and Gómez, Trinidad and Caballero, Rafael and Liern, Vicente},
keywords = {Analysis ; Certainty ; Confidence intervals ; Constraints ; Decision making ; Economic conditions ; Fuzzy numbers ; Investment analysis ; Mathematical models ; Parameter uncertainty ; Preferences ; Project portfolio ; Scheduling ; Studies ; Uncertainty},
